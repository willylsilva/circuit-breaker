	"item": [
		{
			"name": "Order Payment",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Sucesso 200\", function() {\r",
							"    pm.response.to.have.status(200)\r",
							"})\r",
							"\r",
							"var amount = parseFloat(pm.collectionVariables.get(\"amount\")) + 1\r",
							"var bankId = 0\r",
							"\r",
							"if (amount % 2 == 0) {\r",
							"    bankId = 1\r",
							"} else {\r",
							"    bankId = 2\r",
							"}\r",
							"\r",
							"pm.collectionVariables.set(\"amount\", amount)\r",
							"pm.collectionVariables.set(\"bankId\", bankId)\r",
							"\r",
							"if (pm.response.code == 412) {\r",
							"    pm.collectionVariables.set(\"412\" ,parseFloat(pm.collectionVariables.get(\"412\")) + 1)\r",
							"} else if (pm.response.code == 503) {\r",
							"    pm.collectionVariables.set(\"503\" ,parseFloat(pm.collectionVariables.get(\"503\")) + 1)\r",
							"} else if (pm.response.code == 408) {\r",
							"    pm.collectionVariables.set(\"408\" ,parseFloat(pm.collectionVariables.get(\"408\")) + 1)\r",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
